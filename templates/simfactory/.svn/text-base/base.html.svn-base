{% extends "template.html" %}

{% block title %}
    Simulocean - Sim Factory
{% endblock %}

{% block shortcuts_title %}
    Simfactory Panel
{% endblock %}

{% block panelnavibar %}
    <a class="brand" href="{% url simfactory_joblist %}">
        <img class="infobox" src="{{ STATIC_URL }}simfactory/img/monitor.png"/>Simulations</a>
    <ul class="nav" role="navigation">
        <li class="dropdown">
            <a id="drop1" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">Jobs<b
                    class="caret"></b></a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                <li role="presentation">
                    <a role="menuitem" tabindex="-1" href="{% url simfactory_jobadd %}" title="Create a new job">
                        <img src="{{ STATIC_URL }}simfactory/img/monitor_add.png"
                             alt="create a new job"/> Create a new job
                    </a>
                </li>
                <li role="presentation">
                    <a role="menuitem" tabindex="-1" href="{% url simfactory_joblist %}" title="List all my jobs">
                        <img src="{{ STATIC_URL }}simfactory/img/monitor.png"
                             alt="list all my jobs"/> List all my jobs
                    </a>
                </li>
                <li class="dropdown-submenu">
                    <a role="menuitem" tabindex="-1" href="#" title="Export my projects">
                        Export all my jobs
                    </a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
                        <li role="presentation">
                            <a role="menuitem" tabindex="-1" href="{% url simfactory_jobexportxml %}"
                               title="Export my projects">
                                <img src="{{ STATIC_URL }}simfactory/img/monitor.png"
                                     alt="Export my jobs to XML"/> Export to XML
                            </a>
                        </li>
                        <li role="presentation">
                            <a role="menuitem" tabindex="-1" href="{% url simfactory_jobexportjson %}"
                               title="Export my projects">
                                <img src="{{ STATIC_URL }}simfactory/img/monitor.png"
                                     alt="Export my jobs to JSON"/> Export to JSON
                            </a>
                        </li>
                    </ul>
                </li>
                {#                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Something else here</a></li>#}
                {#                <li role="presentation" class="divider"></li>#}
                {#                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>#}
            </ul>
        </li>
        <li class="dropdown">
            <a href="#" id="drop2" role="button" class="dropdown-toggle" data-toggle="dropdown">Machines<b
                    class="caret"></b></a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
                <li role="presentation">
                    <a role="menuitem" tabindex="-1" href="{% url simfactory_machinelist %}" title="List all machines">
                        <img src="{{ STATIC_URL }}simfactory/img/server.png"
                             alt="list all my machines"/> List all my machines
                    </a>
                </li>
            </ul>
        </li>
    </ul>
{% endblock %}

{% block shortcuts %}
    <ul id="browser" class="filetree">
        <li>
            <span class="file"><a href="{% url simfactory_jobadd %}">New job</a></span>
        </li>
        <li>
            <span class="file"><a href="{% url simfactory_joblist %}">List jobs</a></span>
        </li>
        <li>
            <span class="file"><a href="{% url simfactory_machinelist %}">Supercomputer list</a></span>
        </li>
    </ul>
{% endblock %}